@inject HttpClient Http

<Grid TItem="string" class="table table-hover table-bordered table-striped"
      DataProvider="BikeSizesDataProviderAsync"
      Responsive="true">
    <GridColumn TItem="string" HeaderText="Size">
        @context
    </GridColumn>
</Grid>

@code {
    protected IEnumerable<string>? BikeSizes { get; set; }

    private async Task<GridDataProviderResult<string>> BikeSizesDataProviderAsync(GridDataProviderRequest<string> request)
    {
        BikeSizes ??= await GetBikeSizes();

        return await Task.FromResult(request.ApplyTo(BikeSizes));
    }

    private async Task<IEnumerable<string>> GetBikeSizes()
    {
        var bikes = (await Http.GetFromJsonAsync<Bike[]>("/api/Bikes") ?? new Bike[] { }).ToList();
        var bikeSizes = bikes.Select(x => x.Size).Distinct(StringComparer.OrdinalIgnoreCase);
        
        var sorted = bikeSizes.OrderBy(x => x);

        return sorted;
    }
}